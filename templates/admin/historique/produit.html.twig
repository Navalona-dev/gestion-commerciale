function searchFacture() {
        var anchorName = document.location.hash.substring(1);

        showSpinner();

        setTimeout(function() {
            // Récupération des valeurs des filtres
            var nomCompte = $('#nom_compte').val().toLowerCase();
            var dateFactureDebut = $('#date_facture_debut').val();
            var datePaiementDebut = $('#date_paiement_debut').val();
            var dateFactureEnd = $('#date_facture_end').val();
            var datePaiementEnd = $('#date_paiement_end').val();
            var statut = $('#filter_status').val().trim();
            var mappedStatut = mapStatus(statut);

            // Réinitialiser les filtres
            $.fn.dataTable.ext.search.push(function(settings, data, dataIndex) {
                var dateFacture = parseDate(data[4].trim()); // Supposons que la colonne 4 est la date de facture
                var datePaiement = parseDate(data[10].trim()); // Supposons que la colonne 10 est la date de paiement
                
                // Vérifier les correspondances
                var clientMatch = (nomCompte === '' || data[7].toLowerCase().indexOf(nomCompte) !== -1);
                var statusMatch = (statut === '' || mappedStatut === '' || data[11].trim() === mappedStatut);

                // Vérifier les dates
                var dateFactureMatch = true;
                if (dateFactureDebut) {
                    var startDateFactureDebut = parseDate(dateFactureDebut);
                    if (dateFacture < startDateFactureDebut) {
                        dateFactureMatch = false;
                    }
                }
                if (dateFactureEnd) {
                    var endDateFactureEnd = parseDate(dateFactureEnd);
                    if (dateFacture > endDateFactureEnd) {
                        dateFactureMatch = false;
                    }
                }
                var datePaiementMatch = true;
                if (datePaiementDebut) {
                    var startDatePaiementDebut = parseDate(datePaiementDebut);
                    if (datePaiement < startDatePaiementDebut) {
                        datePaiementMatch = false;
                    }
                }
                if (datePaiementEnd) {
                    var endDatePaiementEnd = parseDate(datePaiementEnd);
                    if (datePaiement > endDatePaiementEnd) {
                        datePaiementMatch = false;
                    }
                }

                return clientMatch && statusMatch && dateFactureMatch && datePaiementMatch;
            });

            // Mettre à jour DataTables avec les nouveaux filtres
            $('#table-facture').DataTable().draw();

            // Réinitialiser les filtres après utilisation
            $.fn.dataTable.ext.search.pop();

            if (anchorName) {
                window.location.hash = anchorName;
            }

            hideSpinner();
        }, 2000);
    }

