   
        {% if type == "thead" %}
        <tr id="thead_categorie_permission" class="text-nowrap">
            <th>Titre</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
        {% elseif type == "tbody" %}
        <tr id="tbody_categorie_permission" class="text-nowrap">
            <td> {{liste.title}} </td>
            <td> {{liste.description|slice(0,50)|raw}} </td>
            
            <td>
                <a href="#" onclick="return openModalUpdateCategoryPermission({{liste.id}})"><i class="bi bi-pencil-fill"></i></a>
                <a href="#" onclick="return deleteCategoryPermission({{liste.id}})"><i class="bi bi-trash text-danger"></i></a>
            </td>
        </tr>
         {% endif %}
<script>
    
    function deleteCategoryPermission(id = null) {
        if (confirm('Voulez vous vraiment supprimer cet categorie?')) {
            $.ajax({
                url: '/admin/categorypermission/delete/'+id,
                type: 'POST',
                data: {category: id},
                success: function (response) {
                    var nextLink = $('#sidebar').find('li#category_permission').find('a');
                    setTimeout(function () {
                        toastr.options = {
                            closeButton: true,
                            progressBar: true,
                            showMethod: 'slideDown',
                            timeOut: 1000
                        };
                        toastr.success('Avec succèss', 'Suppression effectuée');

                        //$(".loadBody").css('display', 'none');

                    }, 800);
                    if (nextLink.length > 0) {
                        nextLink.click();
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    // Gérer l'erreur (par exemple, afficher un message d'erreur)
                    alert('Erreur lors de l\'ajout de la catégorie.');
                }
            });
        }
    }

    function openModalUpdateCategoryPermission(id = null) {
        $.ajax({
                url: '/admin/categorypermission/'+id,
                type: 'POST',
                data: {id: id},
                success: function (response) {
                    if (response.html != "") {
                        $("#blocModalEmpty").empty();
                        $("#blocModalEmpty").append(response.html);
                        $('#modalUpdateCategoryPermission').modal('show');
                    }
                    
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    // Gérer l'erreur (par exemple, afficher un message d'erreur)
                    alert('Erreur lors de l\'ajout de la catégorie.');
                }
            });
    }
